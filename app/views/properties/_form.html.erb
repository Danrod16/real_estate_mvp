
<%= simple_form_for(@property) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-auth text-center">
    <%= f.input :name, class: "form-control"%>
    <%= f.input :address, class: "form-control" %>
    <%= f.input :price, class: "form-control" %>
    <%= f.input :rooms, class: "form-control" %>
    <%= f.input :bathrooms, class: "form-control" %>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
